# Base image, stage
FROM node:lts-alpine as base

# Development stage
FROM base as development
WORKDIR /Anjezha
COPY package.json  ./
RUN npm install
COPY . .
EXPOSE 5000
CMD ["npm", "run", "start:dev"]

# Production stage
FROM base as production
WORKDIR /Anjezha
COPY package.json ./
RUN npm install --only=production
COPY . .
RUN npm run build
EXPOSE 5000
CMD ["npm", "run", "start"]